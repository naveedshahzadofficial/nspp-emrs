{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "isolatedModules": false,
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "strict": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "types": [
            "@types/node", "@types/ziggy-js"
        ],
        "paths": {
            "@/*": ["resources/ts/*"]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "typeRoots": ["./node_modules/@types", "resources/ts/types"],
    "include": ["resources/ts/**/*.ts", "resources/ts/**/*.d.ts", "resources/ts/**/*.vue"],
    "exclude": ["node_modules", "public"]

}
